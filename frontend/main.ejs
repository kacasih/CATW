  <style> 
    body {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 18px;
    }

    .affix {
      top: 0;
      width: 100%;
      z-index: 99999;
    }

    .nav-container {
      display: flex;
      justify-content: center;
    }

    .header-container {
      min-height: 150px;
    }

    #logo {
      width: 6%;
    }
    
    .plane-container {
      border: 5px solid black;
      background-image: url("/public/images/background.png"); 
      background-size: cover;
      background-position: center;
      background-color: darkblue;
      width: 84%;
    } 

    #stars {
    position: absolute;
    top: 0;
    left: 0;
    width: 30%;
    z-index: 1;
    }

    #stars2 {
      position: absolute;
      top: 0;
      left: 35%;
      width: 30%;
      z-index: 1;
    }

    #stars3 {
      position: absolute;
      top: 0;
      right: 0;
      width: 30%;
      z-index: 1;
    }
    #mountains {
      max-height: auto;
      width: 100%; /* fit the container when resizing viewport*/
      object-fit: cover; /* keeping aspect ratio of image same and covering container, no position absolute with top bc aspect ratio would break*/
      z-index: 2;
    }

    #obstacle {
      position: absolute;
      bottom: 0;
      right: 5%;
      max-width: 7%; 
      z-index: 3;
      animation-name: obstacleleft;
      animation-duration: 4s;
      animation-iteration-count: infinite;
      animation-timing-function: linear;
      animation-play-state: paused;
    }

    @keyframes obstacleleft{
      0% {right: 5%;}
      25% {right: 25%;}
      50% {right: 45%;}
      75% {right: 65%;}
      85% {right: 84;}
      95% {right: 93%;}
    }

    @keyframes catjumping {
      0% {bottom: 0;}
      2% {bottom: 2%; content: url("/public/images/catjumping.png")}
      /*42% {bottom: 24%; content: url("/public/images/catjumping.png")}*/
      48% {bottom: 33%; content: url("/public/images/cat.png")}
      59% {bottom: 37%; content: url("/public/images/catfalling.png")}
      /*79% {bottom: 17%; content: url("/public/images/catfalling.png")}*/
      100% {bottom: 0; content: url("/public/images/cat.png")}
    }
    #cat-character {
      position: absolute;
      bottom: 0;
      left: 5%;
      max-width: 8%;
      z-index: 3;
      content: url("/public/images/cat.png");
    }

    .cat-animation {
      animation-name: catjumping;
      animation-duration: 1.8s;
      animation-timing-function: ease-in-out;
      animation-fill-mode: forwards;
    }

    #score {
      position: absolute;
      border-bottom: 4px solid red;
      top: 8.5%;
      right: 9%;
      color: red;
      z-index: 4;
    }

    #start-message {
      position: absolute;
      display: block;
      top: 40%;
      left: 27%;
      white-space: nowrap; /* Prevent text from going to next lines */
      font-size: 3.1vw; 
      color: greenyellow;
      z-index: 5; /*to make sure its on top of all other container elements*/
    }

    .below-plane-container {
      padding: 5 5 5 5;
      min-height: 25vh;
    }

    .footer-container {
      margin-top: 15vh;
    }

    .reviews-image {
      width: 20%;
      margin-left: 22%;
    }
  </style>
</head>
